---
import BootstrapIcon from './icons/BootstrapIcon.astro';
import GitHubIcon from './icons/GitHubIcon.astro';
import HTMLIcon from './icons/HTMLIcon.astro';
import LinkButton from './LinkButton.astro';

const TAGS = {
  HTML: {
    name: 'HTML',
    class: 'bg-orange-600 text-white',
    icon: HTMLIcon,
  },
  BOOTSTRAP: {
    name: 'Bootstrap',
    class: 'bg-purple-600/40 text-white ',
    icon: BootstrapIcon,
  },
};

const PROJECTS = [
  {
    title: 'MiniDesign - A Construction and Interior Design Company',
    description:
      'Mini Design specializes in transforming interior spaces into functional and aesthetically pleasing works of art. With a unique combination of creativity, technical skill, and attention to detail. Developed with HTML, CSS, JavaScript and Bootstrap.',
    link: '#',
    github: '#',
    image: '/projects/project1.webp',
    tags: [TAGS.HTML, TAGS.BOOTSTRAP],
  },
];
---

<section class="flex flex-col gap-y-16">
{
  PROJECTS.map(({ image, title, description, tags, github, link }) => (
    <article >
      <h3 class="text-2xl font-semibold text-[#7acdff] mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2 flex-row mb-2">
        {tags.map((tag) => (
          <li>
            <span
              class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}
            >
              <tag.icon class="w-4 h-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        class="rounded shadow-2xl shadow-white/10"
        src={image}
        alt={`Screenshot of the project ${title}`}
      />

      <footer class="flex gap-x-4 mt-4 justify-end">
        {github && (
          <LinkButton href={github}>
            <GitHubIcon class="size-6" />
            View source code
          </LinkButton>
      )}

        <LinkButton href={link}>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
              <path
                stroke="none"
                d="M0 0h24v24H0z"
                fill="none"
              />
              <path d="M19.5 7a9 9 0 0 0 -7.5 -4a8.991 8.991 0 0 0 -7.484 4" />
              <path d="M11.5 3a16.989 16.989 0 0 0 -1.826 4" />
              <path d="M12.5 3a16.989 16.989 0 0 1 1.828 4" />
              <path d="M19.5 17a9 9 0 0 1 -7.5 4a8.991 8.991 0 0 1 -7.484 -4" />
              <path d="M11.5 21a16.989 16.989 0 0 1 -1.826 -4" />
              <path d="M12.5 21a16.989 16.989 0 0 0 1.828 -4" />
              <path d="M2 10l1 4l1.5 -4l1.5 4l1 -4" />
              <path d="M17 10l1 4l1.5 -4l1.5 4l1 -4" />
              <path d="M9.5 10l1 4l1.5 -4l1.5 4l1 -4" />
          </svg>
          View project
        </LinkButton>
      </footer>
    </article>
  ))
}
</section>