---
import LinkButton from "./LinkButton.astro";

interface Props {
  title: string;
  description: string;
  date: string;
  link?: string;
  company?: string;
}

const { title, description, date, link, company } = Astro.props;
---

<li class="pb-12 ms-7 grid md:grid-cols-5 md:gap-10">
  <div
    class="absolute w-3 h-3 bg-[#7acdff] rounded-full mt-2 -start-1.5 border border-[#7acdff]"
  >
  </div>

  <div class="md:col-span-2 pb-12">
    <h3 class="text-xl font-bold text-[#7acdff]">
      {title}
    </h3>
    <h4 class="font-semibold text-xl">
      {company}
    </h4>

    <time class="mb-1 text-sm font-normal leading-none text-sky-100/90">
      {date}
    </time>
  </div>

  <div class="mb-4 md:col-start-3 md:col-span-3 flex gap-2 flex-col">
    <p class="text-base font-normal text-gray-200 text-pretty">
      {description}
    </p>

    {
      link && (
        <a
          href={link}
          class="text-lg font-medium text-[#b7dbff] hover:text-[#7acdff] transition-colors flex items-center"
        >
          Know More
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-5 icon icon-tabler icon-tabler-chevron-right"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            {" "}
            <path
              stroke="none"
              d="M0 0h24v24H0z"
              fill="none"
            />{" "}
            <path d="M9 6l6 6l-6 6" />{" "}
          </svg>
        </a>
      )
    }
  </div>
</li>
